<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for(resource, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-6 col-md-offset-3">
      
         <%= render 'devise/shared/error_messages', object: f.object %>

          <div class="field">
            <%= f.label :name, class: "col-form-label" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "col-form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "col-form-label" %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "col-form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "Create my account", class: "btn btn-lg btn-primary" %>
        </div>
      </div>
    </div>
  </div>  
<% end %>

<%= render "devise/shared/links" %>
